.row
  .large-4.columns
    = form_for @bank, :remote => true do |f|
      = f.label :name, 'Bank Name'
      = f.text_field :name, :autofocus => true
      = f.label :balance, 'Opening Balance'
      = f.text_field :balance
      = f.submit :class => 'button success'
      = link_to 'Cancel', '#', :'data-clear-form' => true, :class => 'button radius alert'
  .large-8.columns