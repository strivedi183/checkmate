%h1 Transfer on this page

.row
  .large-5.columns
    = form_tag '/banks/xfer' do
      = label_tag 'Bank From: '
      = select_tag "bank_from", options_from_collection_for_select(@auth.banks, "id", "name")
      = label_tag 'Bank To: '
      = select_tag "bank_to", options_from_collection_for_select(@auth.banks, "id", "name")
      = label_tag 'Transfer Amount: '
      = text_field_tag :transaction
      = submit_tag 'Make Transaction', :class => 'button radius success'
      = link_to('Cancel', '#', :class => 'button radius alert')
  .large-7.columns
