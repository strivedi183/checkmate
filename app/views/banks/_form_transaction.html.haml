.row
  .large-7.columns
    = form_tag '/banks/user_xfer', :remote => true do
      = label_tag :amount
      = text_field_tag :amount, nil, :autofocus => true
      .radio= radio_button_tag :transaction_type, 'withdrawal', :checked => true
      .radio= label_tag :transaction_type, 'withdrawal'
      .radio= radio_button_tag :transaction_type, 'deposit'
      .radio= label_tag :transaction_type, 'deposit'
      = hidden_field_tag :bank_id, @bank.id
      = submit_tag nil, :class => 'button success'
      = link_to 'Cancel', '#', :'data-clear-form' => true, :class => 'button radius alert'
  .large-5.columns