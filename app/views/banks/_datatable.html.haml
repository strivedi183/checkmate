.row
  .large-10.large-centered.columns
    %table#datatable.display{:border => "0", :cellpadding => "0", :cellspacing => "0", :width => "100%"}
      %thead
        %tr
          %th Date
          %th Amount
          %th Bank
          %th Type
          %th From
      %tbody
        - @bank.transactions.sort.each do |transaction|
          %tr
            %td= transaction.created_at.in_time_zone("EST").strftime('%m/%d/%y, %I:%M%p')
            %td= number_to_currency(transaction.amount)
            %td= transaction.bank.name
            %td= transaction.transaction_type
            %td= transaction.from
      %tfoot
